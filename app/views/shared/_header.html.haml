%nav.navbar.navbar-dark.bg-primary
  = link_to 'ホーム:' + current_user.name, root_path, class: 'navbar-brand'
  %ul.nav.navbar-nav.pull-xs-right
    -if user_signed_in?
      %li.nav-item
        - q=Tweet.ransack
        = search_form_for(q, url: search_user_path(current_user), class: 'navbar-form form-inline') do |f|
          = f.input :body_or_user_name_cont, label: false, placeholder: 'ツィート・ユーザー名'
          = f.button :submit, class: 'btn btn-primary'
      %li.nav-item
        = link_to 'アカウント編集', edit_user_registration_path, class: 'nav-link'
      %li.nav-item
        = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link'
      %li.nav-item
        = button_tag 'ツィートする', class: 'nav-link btn btn-info btn-sm',
          data: {toggle: "modal", target:"#doTweet"}, style:'color:white;'
    -else
      %li.nav-item
        = link_to 'ログイン', new_user_session_path, class: 'nav-link'
      %li.nav-item
        = link_to 'アカウント作成', new_user_registration_path, class: 'nav-link'
= render 'shared/do_tweet_modal'
