%div.container-fluid
  %div.row
    =render 'shared/sidebar'
    %div.col-xs-8
      - @user.tweets.order_latest.each do |tweet|
        %div.card
          %div.card-header
            #{tweet.user.name}
          %div.card-block
            %div.card-text
              #{tweet.body}
          %div.card-footer
            -if my_tweet? tweet
              =link_to '編集する', edit_user_tweet_path(@user, tweet), method: :get, class: 'btn btn-primary btn-sm'
              =link_to '削除する', user_tweet_path(@user, tweet), method: :delete, class: 'btn btn-danger btn-sm'
