= simple_form_for(@tweet, url: [current_user, @tweet]) do |f|
  = f.error_notification
  .form-inputs
    = f.input :body,label: 'ツィート', as: :text, class:'textarea', input_html: {rows: 10}, autofocus: true,
             placeholder: '今どうしている？', maxlength: Constants::MAX_LENGTH_TWEET
  .form-actions
    = f.button :submit, data: {disable_with: 'ツィート処理中...'}
